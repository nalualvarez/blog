<h1><%= @article.title%></h1>

<p><%= @article.text%></p>

<%= render @article.comments %>

<h3>Adicionar comentario</h3>

<%= form_for ([@article, @article.comments.build]) do |f|%>
<p>
	<%= f.label :commenter %>
	<%= f.text_field :commenter %>
</p>
<p>
	<%= f.label :body %>
	<%= f.text_area :body %>
</p>
<p> 
	<%= f.submit %>
</p>
<% end %>



<%= link_to("Voltar", articles_path) %>

