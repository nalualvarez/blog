<h1>New article</h1>

<%= form_for :article, url: articles_path  do |f| %>
	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@article.errors.count, "error") %>
			</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li> <%= msg%> </li>
				<% end%>
			</ul>
		</div>
	<%end%>

	<p>
	<%= f.label :title %>
	<%= f.text_field :title %>
	</p>
	
	<br>
	
	<p>
	<%= f.label :text %>
	<%= f.text_area :text %>
	</p>

	<br>

	<%= f.submit%>

<% end %>

<%= link_to "Voltar para listagem", articles_path %>
